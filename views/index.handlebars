<div class="text-center">
  <h1>Eat-da-Burger!</h1>
  <img src="https://cdn.hswstatic.com/gif/cheeseburger-1.jpg" alt="burger image" width="25%">


  <div class="row">
    <div class="col-6">
      <h2>Today's Special!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">

      <h2>Already Eaten!</h2>
      <p>No longer availble until requested! Just "Add a Burger" in the form below to add back to "Today's Special!"
      </p>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div>
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Hit "Enter" or the "Add Burger" button here</label><br>
        {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Ready --}}
      </div>

      <button type="submit" name="devoured" value="0">Add Burger</button>
    </form>
  </div>
</div>